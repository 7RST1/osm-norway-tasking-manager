extends base

block content
    .container
        .row
            for map in maps
                .map.well
                  ul.nav.map-stats
                    li
                      i.icon-user
                      span
                    li.row
                      table
                        tr
                          td
                            .progress(style='border: 1px solid #ccc;')
                              .bar(style='width: 90%;')
                          td
                  h4
                    a(href="${request.route_url('map', map=map.id)}") ${map.title}
                  .clear
                  .created-by
                    | Created by
                    span Pierre
                  .world_map
                    .marker(style='top: 15px; left: 43px;')
                  .clear
                  .updated-at
                    | Updated
                    span 10 min
                    | ago
            endfor

